{% extends 'base.html.twig' %}
{% block title%} Create - article {% endblock %}
{% block body%}
	<h1 class="text-center">Creer un nouvel article</h1>
	<form action="{{ path('store')}}" method="POST">
		
		<div class="form-group">
			<label for="title" class="label-control">Title</label>
			<input type="text" id="title" placeholder="Entrez le titre de l'article..." name="title" class="form-control">
		</div>
		
		<div class="form-group">
			<label for="content" class="label-control">Description</label>
			<textarea  rows=10 cols=10 id="title" name="content" class="form-control" placeholder="Entrez le titre de l article..." ></textarea>
		</div>

		<div class="form-group">
			<label for="img" class="label-control">Image</label>
			<input type="text" id="img" name="img" placeholder="url de l'image" class="form-control" >
		</div>


		<input type="submit" class="btn btn-primary btn-block" name="create-article" value="Creer l'article">

	</form>
{% endblock %}